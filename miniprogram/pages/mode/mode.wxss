.mask { min-height: 100vh; background: rgba(0,0,0,.38); display: flex; align-items: flex-end; }
.sheet { width: 100%; background: #fff; border-radius: 24px 24px 0 0; padding: 24px 20px 36px; box-sizing: border-box; }
.handle { margin: 0 auto 16px; width: 40px; height: 4px; border-radius: 2px; background: #e8e4de; }
.header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 12px; }
.title { font-size: 20px; font-weight: 600; color: #2d2a26; }
.close { width: 32px; height: 32px; line-height: 32px; text-align: center; border-radius: 16px; background: #f8f5f0; color: #6d6a65; }
.opt { margin-top: 10px; border: 1px solid #e8e4de; border-radius: 16px; padding: 16px 18px; display: flex; align-items: center; justify-content: space-between; }
.active { border-width: 2px; border-color: #4a9b6e; background: #e8f5ed; }
.opt-title { display: block; font-size: 15px; color: #2d2a26; font-weight: 500; }
.opt-desc { display: block; margin-top: 2px; font-size: 12px; color: #6d6a65; }
.check { color: #4a9b6e; font-size: 20px; }
