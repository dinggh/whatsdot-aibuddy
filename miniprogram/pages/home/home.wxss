.content { flex: 1; padding: 0 24px; display: flex; flex-direction: column; }
.header { margin-top: 16px; display: flex; flex-direction: column; gap: 4px; }
.title { font-size: 26px; font-weight: 600; color: #2d2a26; }
.subtitle { font-size: 14px; color: #6d6a65; }
.camera-btn { margin-top: 40px; width: 200px; height: 200px; border-radius: 100px; background: #4a9b6e; color: #fff; font-size: 20px; font-weight: 600; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 20px rgba(74,155,110,.25); }
.album-btn { margin-top: 20px; height: 52px; border-radius: 16px; display: flex; align-items: center; justify-content: center; color: #6d6a65; }
.tip { margin-top: 24px; border-radius: 16px; background: #fff8e1; padding: 16px 20px; display: flex; align-items: center; gap: 8px; }
.tip-text { font-size: 13px; color: #6d6a65; }
.tabbar { height: 82px; background: #fff; border-top: 1px solid #e8e4de; padding: 10px 0 28px; display: flex; }
.tab { flex: 1; display: flex; align-items: center; justify-content: center; font-size: 10px; color: #9c9892; }
.tab.active { color: #4a9b6e; font-weight: 600; }
