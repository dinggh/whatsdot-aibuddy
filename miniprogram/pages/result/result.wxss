.topbar { height: 44px; padding: 0 16px; display: flex; align-items: center; justify-content: space-between; }
.back { font-size: 24px; color: #2d2a26; width: 28px; }
.title { font-size: 17px; font-weight: 600; color: #2d2a26; }
.mode { background: #e8f5ed; border-radius: 100px; padding: 6px 10px; font-size: 12px; color: #4a9b6e; }
.content { flex: 1; padding: 0 16px 10px; box-sizing: border-box; }
.card { margin-bottom: 12px; padding: 16px; }
.card-title { font-size: 13px; color: #4a9b6e; font-weight: 600; }
.qimg { margin-top: 8px; width: 100%; height: 100px; border-radius: 12px; }
.qtext { margin-top: 8px; font-size: 15px; color: #2d2a26; }
.h { font-size: 16px; color: #2d2a26; font-weight: 600; }
.p { margin-top: 8px; font-size: 14px; line-height: 22px; color: #6d6a65; white-space: pre-line; }
.strong { background: #e8f5ed; border-color: #4a9b6e; border-width: 1.5px; }
.dark { color: #2d2a26; }
.actions { height: 84px; border-top: 1px solid #e8e4de; background: #fff; padding: 12px 16px 28px; display: flex; gap: 10px; box-sizing: border-box; }
.btn { flex: 1; height: 44px; border-radius: 12px; border: 1px solid #e8e4de; background: #fff; color: #6d6a65; font-size: 14px; }
.primary { background: #4a9b6e; color: #fff; border-color: #4a9b6e; }
