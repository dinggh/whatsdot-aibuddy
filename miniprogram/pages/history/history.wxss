.header { height: 52px; padding: 0 20px; display: flex; align-items: center; justify-content: space-between; }
.title { font-size: 22px; font-weight: 600; color: #2d2a26; }
.search { width: 36px; height: 36px; border-radius: 18px; border: 1px solid #e8e4de; background: #fff; text-align: center; line-height: 36px; color: #6d6a65; }
.list { flex: 1; padding: 8px 16px; box-sizing: border-box; }
.date { display: block; margin: 6px 0; font-size: 13px; color: #9c9892; }
.item { margin-bottom: 12px; padding: 14px; display: flex; align-items: center; gap: 12px; }
.thumb { width: 56px; height: 56px; border-radius: 10px; }
.meta { flex: 1; display: flex; flex-direction: column; gap: 4px; }
.t { font-size: 15px; color: #2d2a26; }
.s { font-size: 11px; color: #9c9892; }
.arrow { color: #9c9892; font-size: 18px; }
.tabbar { height: 82px; background: #fff; border-top: 1px solid #e8e4de; padding: 10px 0 28px; display: flex; }
.tab { flex: 1; display: flex; align-items: center; justify-content: center; font-size: 10px; color: #9c9892; }
.tab.active { color: #4a9b6e; font-weight: 600; }
