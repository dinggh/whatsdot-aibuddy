<view class="screen">
  <view class="status-bar"><text>9:41</text><text>⋯</text></view>
  <view class="header"><text class="title">历史记录</text><text class="search">⌕</text></view>

  <scroll-view class="list" scroll-y="true">
    <view wx:if="{{loading}}" class="date">加载中...</view>
    <block wx:for="{{items}}" wx:key="id">
      <view class="panel item">
        <image src="{{item.thumbUrl}}" class="thumb" mode="aspectFill" />
        <view class="meta">
          <text class="t">{{item.title}}</text>
          <text class="s">{{item.grade}} · {{item.displayTime}}</text>
        </view>
        <text class="arrow">›</text>
      </view>
    </block>
    <view wx:if="{{!loading && items.length === 0}}" class="date">暂无记录</view>
  </scroll-view>

  <view class="tabbar">
    <view class="tab" bindtap="goHome"><text>首页</text></view>
    <view class="tab active"><text>历史记录</text></view>
    <view class="tab"><text>家长课堂</text></view>
    <view class="tab" bindtap="goProfile"><text>我的</text></view>
  </view>
</view>
