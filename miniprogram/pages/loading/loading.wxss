.loading-wrap { flex: 1; padding: 0 40px; display: flex; flex-direction: column; align-items: center; justify-content: center; }
.preview { width: 220px; height: 160px; border-radius: 16px; border: 1px solid #e8e4de; }
.ring { margin-top: 32px; width: 48px; height: 48px; border-radius: 24px; border: 3px solid #4a9b6e; background: #e8f5ed; color: #4a9b6e; display: flex; align-items: center; justify-content: center; }
.loading-title { margin-top: 16px; font-size: 18px; color: #2d2a26; font-weight: 600; }
.loading-sub { margin-top: 6px; font-size: 14px; color: #9c9892; }
.tip { margin-top: 32px; width: 100%; border-radius: 14px; background: #e6f0f8; padding: 14px 18px; }
.tip-text { font-size: 12px; line-height: 18px; color: #6d6a65; }
.next { margin-top: 24px; width: 100%; height: 44px; border-radius: 12px; background: #4a9b6e; color: #fff; font-size: 14px; }
