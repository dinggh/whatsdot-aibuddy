page {
  background: #f8f5f0;
  color: #2d2a26;
  font-family: "PingFang SC", "Helvetica Neue", Arial, sans-serif;
}

.screen {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f5f0;
}

.status-bar {
  height: 54px;
  padding: 14px 24px 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 16px;
  font-weight: 600;
}

.nav-back {
  height: 44px;
  padding: 0 16px;
  display: flex;
  align-items: center;
  font-size: 22px;
}

.panel {
  background: #fff;
  border: 1px solid #e8e4de;
  border-radius: 16px;
  box-sizing: border-box;
}

.muted {
  color: #6d6a65;
}

.tertiary {
  color: #9c9892;
}
